<h1> Meus imóveis </h1>
<%= link_to 'Voltar', root_path  %>
<% @owner.properties.each do |property| %>
  <div class="property-img">
    <img src="<%= @image %> " />
  </div>
  <div class="property-details">
    <h3><%= link_to property.title, property_path(property.id) %></h3>
    <ul>
      <li>Diária: <%= number_to_currency(property.daily_rate, unit: "R$ ",
        separator: ",", delimiter: "") %> por dia</li>
        <li>Acomoda no máximo <%= property.maximum_guests %> pessoas</li>
        <li><%= property.property_location %></li>
    </ul>
  </div>
<% end %>
