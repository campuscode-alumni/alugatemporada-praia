<h1>Meus imóveis</h1>

<% @properties.each do |property| %>
  <div class="property-img">
    <img src="<%= @image %> " />
  </div>
  <div class="property-details">
    <h3><%= link_to property.title, property_path(property.id) %></h3>
    <ul>
      <li>Valor da Diária: <%= number_to_currency(property.daily_rate, unit: "R$ ",
        separator: ",", delimiter: "") %></li>
      <li>Máx. Hospedes: <%= property.maximum_guests %></li>
    </ul>
  </div>
<% end %>
